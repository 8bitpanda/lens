<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorRed"
    android:orientation="vertical"
    tools:context="com.eightbitpanda.lens.resultfragments.WeblinkFragment">

    <RelativeLayout
        android:id="@+id/weblink_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/weblink_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="72sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/weblink_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/weblink_countdown"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="4dp"
            android:textColor="@color/colorWhite"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weblink_countdown"
            android:layout_centerHorizontal="true"
            android:layout_margin="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/weblink_retry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:fabSize="normal"
                app:srcCompat="@drawable/ic_redo_black_36dp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/weblink_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:fabSize="normal"
                app:srcCompat="@drawable/ic_share_black_36dp" />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
