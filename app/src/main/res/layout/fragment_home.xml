<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eightbitpanda.lens.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@android:color/holo_red_dark"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/ic_public_white_96dp"
                android:padding="4dp"
                android:text="@string/home_weblink"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:background="@android:color/holo_blue_light"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/ic_call_white_96dp"
                android:padding="4dp"
                android:text="@string/home_call"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/colorPrimary"
                android:drawableLeft="@drawable/ic_contacts_white_96dp"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_contacts_white_96dp"
                android:padding="4dp"
                android:text="@string/home_businesscard"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@android:color/holo_orange_dark"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/ic_search_white_96dp"
                android:padding="4dp"
                android:text="@string/home_search"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:background="@android:color/holo_green_dark"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/ic_g_translate_white_96dp"
                android:padding="4dp"
                android:text="@string/home_translate"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
